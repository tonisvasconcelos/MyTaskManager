// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  slug      String   @unique
  name      String?
  planName  String   @default("Starter")
  maxUsers  Int      @default(5)
  activeUntil DateTime?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companies Company[]
  projects  Project[]
  users     User[]
  tasks     Task[]
  timeEntries TimeEntry[]
  expenses  Expense[]
  payments  Payment[]
  sales     Sale[]

  @@index([slug])
}

enum ProjectStatus {
  Planned
  Active
  OnHold
  Completed
  Cancelled
}

enum TaskStatus {
  Backlog
  InProgress
  Blocked
  Done
}

enum TaskPriority {
  Low
  Medium
  High
}

enum TaskBillable {
  Billable
  NonBillable
}

enum UserRole {
  Admin
  Manager
  Contributor
  SuperAdmin
}

enum BillingUnit {
  HR
  PROJECT
}

enum PaymentMethod {
  CORPORATE_CREDIT_CARD
  BANK_TRANSFER
  PAYPAL
  OTHER
}

enum PaymentStatus {
  PENDING
  PARTIALLY_PAID
  PAID
}

model Company {
  id        String   @id @default(uuid())
  tenantId  String
  name      String
  email     String?
  phone     String?
  website   String?
  address   String?
  notes     String?  @db.Text
  countryCode String?
  invoicingCurrencyCode String?
  taxRegistrationNo String?
  billingUnit BillingUnit?
  unitPrice Decimal? @db.Decimal(10, 2)
  generalNotes String? @db.Text
  logoFileName String?
  logoOriginalName String?
  logoMimeType String?
  logoSize Int?
  logoUrl String?
  logoData Bytes? // BLOB storage for logo image data
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  projects Project[]
  expenses Expense[]
  sales    Sale[]

  @@index([tenantId])
  @@index([tenantId, name])
}

model Project {
  id            String        @id @default(uuid())
  tenantId     String
  companyId    String
  name         String
  description  String?       @db.Text
  status       ProjectStatus @default(Planned)
  startDate    DateTime?
  targetEndDate DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  tasks   Task[]
  expenseAllocations ExpenseAllocation[]

  @@index([tenantId])
  @@index([tenantId, companyId])
  @@index([tenantId, status])
}

enum UserLanguage {
  EN
  PT_BR
}

model User {
  id        String    @id @default(uuid())
  tenantId  String
  fullName  String
  email     String
  passwordHash String
  role      UserRole @default(Contributor)
  language  UserLanguage @default(EN)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  tenant        Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  assignedTasks Task[]
  timeEntries   TimeEntry[]

  @@index([tenantId])
  @@unique([tenantId, email])
}

model Task {
  id                String       @id @default(uuid())
  tenantId          String
  projectId         String
  title             String
  description       String?      @db.Text
  startDate         DateTime?
  estimatedEndDate  DateTime?
  estimatedEffortHours Decimal?  @default(0) @db.Decimal(10, 2)
  status            TaskStatus   @default(Backlog)
  priority          TaskPriority @default(Medium)
  billable          TaskBillable @default(Billable)
  labels            String[]     @default([]) // Tags to identify task area (e.g., #legal, #development)
  assigneeId        String?
  refTicket         String?      // Reference ticket from Jira/DevOps
  refLink           String?       // Link to ticket in external system
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  tenant      Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  project     Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?            @relation(fields: [assigneeId], references: [id], onDelete: SetNull)
  attachments TaskAttachment[]
  timeEntries TimeEntry[]

  @@index([tenantId])
  @@index([tenantId, status])
  @@index([tenantId, assigneeId])
  @@index([tenantId, projectId])
}

model TaskAttachment {
  id          String   @id @default(uuid())
  taskId      String
  fileName    String
  originalName String
  mimeType    String
  size        Int
  url         String
  createdAt   DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}

model TimeEntry {
  id        String   @id @default(uuid())
  tenantId  String
  taskId    String
  userId    String
  entryDate DateTime @db.Date
  hours     Decimal  @db.Decimal(10, 2)
  notes     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, userId, entryDate])
  @@index([tenantId, taskId])
}

model Expense {
  id                  String         @id @default(uuid())
  tenantId            String
  companyId           String
  invoiceNumber       String
  date                DateTime
  dueDate             DateTime?
  refStartDate        DateTime?
  refEndDate          DateTime?
  invoiceCurrencyCode String?        @db.VarChar(3)
  totalAmount         Decimal        @db.Decimal(10,2)
  paymentMethod       PaymentMethod
  status              PaymentStatus  @default(PENDING)
  notes               String?        @db.Text
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  tenant        Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  company       Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  allocations   ExpenseAllocation[]
  payments      Payment[]

  @@index([tenantId])
  @@index([tenantId, invoiceNumber])
  @@unique([tenantId, companyId, invoiceNumber])
}

model ExpenseAllocation {
  id              String   @id @default(uuid())
  expenseId       String
  projectId       String
  allocatedAmount Decimal? @db.Decimal(10,2)
  allocatedPercentage Decimal? @db.Decimal(5,2) // Percentage (0-100)

  expense   Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([expenseId])
  @@index([projectId])
  @@unique([expenseId, projectId])
}

model Payment {
  id                  String        @id @default(uuid())
  tenantId            String
  expenseId           String
  amount              Decimal       @db.Decimal(10,2)
  paymentCurrencyCode String?       @db.VarChar(3)
  amountLCY           Decimal?      @db.Decimal(10,2)
  paymentDate         DateTime
  paymentMethod       PaymentMethod
  referenceNumber     String?
  notes               String?       @db.Text
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  expense Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([expenseId])
  @@index([tenantId, paymentDate])
}

model Sale {
  id            String   @id @default(uuid())
  tenantId      String
  companyId     String
  invoiceNumber String
  date          DateTime
  totalAmount   Decimal  @db.Decimal(10,2)
  status        PaymentStatus @default(PENDING)
  notes         String?  @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, invoiceNumber])
  @@unique([tenantId, companyId, invoiceNumber])
}
